pipeline {
    agent any
    tools {
        nodejs 'nodejs'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                // Install dependencies
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'npm test || echo "No tests defined"'
            }
        }
        stage('Build') {
            steps {"build": "echo 'build is successful' && exit 0"
                // Build the application
                sh 'npm run build'
            }
        }
    }
}




           
         


    
  
